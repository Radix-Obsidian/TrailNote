{
  "manifest_version": 3,
  "name": "TrailNote Agent Builder",
  "version": "3.0.0",
  "description": "Zero-to-one platform for building autonomous AI agents without coding. Create, deploy, and run agents that perceive, reason, and act.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.freecodecamp.org/*",
    "https://api.openai.com/*",
    "https://api.groq.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.freecodecamp.org/*"],
      "js": ["src/lib/rules.js", "src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/panel/panel-v2.html"
  },
  "action": {
    "default_title": "Open TrailNote Agent Builder"
  },
  "commands": {
    "open-agent-designer": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Open Agent Designer"
    }
  }
}

